{
  "basePath": "\/",
  "paths": {
    "\/didmaps": {
      "post": {
        "summary": "Store DID Maps",
        "deprecated": false,
        "produces": [
          "application\/json;charset=UTF-8"
        ],
        "description": "Submit a list of DID Maps, associating a User ID to the necessary DID information for authentication",
        "operationId": "storeDidMaps",
        "responses": {
          "200": {
            "schema": {
              "$ref": "#\/definitions\/DidMappingResponse"
            },
            "description": "Did Maps stored."
          },
          "201": {
            "description": "Created"
          },
          "400": {
            "schema": {
              "$ref": "#\/definitions\/ExceptionResponseBody"
            },
            "description": "One or more DID Maps format invalid."
          },
          "401": {
            "description": "Unauthorized"
          },
          "403": {
            "description": "Forbidden"
          },
          "404": {
            "description": "Not Found"
          }
        },
        "parameters": [
          {
            "schema": {
              "$ref": "#\/definitions\/DidMappingRequest"
            },
            "in": "body",
            "name": "didMapRequest",
            "description": "didMapRequest",
            "required": true
          }
        ],
        "tags": [
          "did-map-controller"
        ],
        "consumes": [
          "application\/json;charset=UTF-8"
        ]
      }
    },
    "\/didmaps\/{applicationId}\/{userId}": {
      "get": {
        "summary": "Get a stored DID Map",
        "deprecated": false,
        "produces": [
          "application\/json;charset=UTF-8"
        ],
        "description": "Retrieve a previously stored DID Map based of an App ID and User ID",
        "operationId": "getDidMap",
        "responses": {
          "200": {
            "schema": {
              "$ref": "#\/definitions\/DidMappingResponse"
            },
            "description": "Did Map found."
          },
          "401": {
            "description": "Unauthorized"
          },
          "403": {
            "description": "Forbidden"
          },
          "404": {
            "description": "Did Map not found."
          }
        },
        "parameters": [
          {
            "in": "path",
            "name": "applicationId",
            "description": "applicationId",
            "type": "string",
            "required": true
          },
          {
            "in": "path",
            "name": "userId",
            "description": "userId",
            "type": "string",
            "required": true
          }
        ],
        "tags": [
          "did-map-controller"
        ]
      }
    }
  },
  "host": "localhost:45647",
  "definitions": {
    "DidMappingResponse": {
      "type": "object",
      "title": "DidMappingResponse",
      "properties": {
        "didMaps": {
          "type": "array",
          "items": {
            "$ref": "#\/definitions\/DidMap"
          }
        }
      }
    },
    "DidMappingRequest": {
      "type": "object",
      "title": "DidMappingRequest",
      "properties": {
        "didMaps": {
          "type": "array",
          "items": {
            "$ref": "#\/definitions\/DidMap"
          }
        }
      }
    },
    "DidMap": {
      "type": "object",
      "title": "DidMap",
      "properties": {
        "applicationId": {
          "type": "string"
        },
        "didInfo": {
          "$ref": "#\/definitions\/DidInfo"
        },
        "userId": {
          "type": "string"
        }
      }
    },
    "DidInfo": {
      "type": "object",
      "title": "DidInfo",
      "properties": {
        "boxPub": {
          "type": "string"
        },
        "pushToken": {
          "type": "string"
        },
        "did": {
          "type": "string"
        }
      }
    },
    "ExceptionResponseBody": {
      "type": "object",
      "title": "ExceptionResponseBody",
      "required": [
        "message"
      ],
      "properties": {
        "code": {
          "type": "string"
        },
        "message": {
          "description": "Human readable error message",
          "type": "string"
        }
      }
    }
  },
  "swagger": "2.0",
  "info": {
    "description": "A microservice for storing associations between user IDs and DIDs for applications that want to use DID-Auth",
    "title": "Did Mapping MS"
  },
  "tags": [
    {
      "name": "did-map-controller",
      "description": "Did Map Controller"
    }
  ]
}